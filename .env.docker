# Cathedral Docker Environment
# Copy this to .env and fill in your API keys

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# OpenRouter API key for LLM access (https://openrouter.ai/keys)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OpenAI API key for embeddings (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# Database (defaults work out of the box)
# =============================================================================

POSTGRES_USER=cathedral
POSTGRES_PASSWORD=cathedral_secret
POSTGRES_DB=cathedral
# DB_PORT=5432  # Uncomment to expose PostgreSQL externally

# =============================================================================
# Application
# =============================================================================

APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Models (optional - these are the defaults)
# =============================================================================

# DEFAULT_MODEL=openai/gpt-4o
# VISION_MODEL=openai/gpt-4o
# EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Features (all enabled by default)
# =============================================================================

# ENABLE_MEMORY_GATE=true
# ENABLE_SCRIPTURE_RAG=true
# ENABLE_SUBAGENTS=true
# ENABLE_MULTIMODAL=true
# AUTO_EXTRACT_MEMORY=true
